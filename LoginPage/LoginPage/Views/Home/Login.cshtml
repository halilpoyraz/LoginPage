@model  LoginPage.Users
@{
    ViewBag.Title = "Login";
}
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN VALIDATION STATES-->
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <div class="portlet light portlet-fit portlet-form bordered">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class=" icon-layers font-green"></i>
                                <span class="caption-subject font-green sbold uppercase">Kullanıcı Girişi Ekranı</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <!-- BEGIN FORM-->
                            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @name = "form1", @id = "form1", @class = "form-horizontal" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-body">
                                    <div class="alert alert-danger display-hide">
                                        <button class="close" data-close="alert"></button> Kullanıcı kodunuz ve şifreniz boş geçilemez.
                                    </div>
                                    <div class="alert alert-success display-hide">
                                        <button class="close" data-close="alert"></button> Your form validation is successful!
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            <span>@Html.DisplayNameFor(a => a.UserName)</span>
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="col-md-4">
                                            @Html.TextBoxFor(a => a.UserName, htmlAttributes: new { @class = "form-control", @data_required = "1", @name = "UserName" })
                                            <span class="help-block"> Kullanıcı Kodunuz </span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            <span>@Html.DisplayNameFor(a => a.Password)</span>
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="col-md-4">
                                            @Html.PasswordFor(a => a.Password, htmlAttributes: new { @class = "form-control", @data_required = "1", @name = "Password", })
                                            <span class="help-block"> Kullanıcı Şifreniz </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="submit" class="btn green">Login</button>
                                        </div>
                                    </div>
                                </div>
                            }
                            </div>
                        </div>
                </div>
            </div>
     
          
@model  LoginPage.Users

@{
    ViewBag.Title = "Login";
}

<script type="text/javascript" src="~/scripts/kural.js"></script>

<div class="row">
    <div class="col-md-12">
        <div class="portlet light portlet-fit portlet-form">
            <div class="portlet-body">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @name = "form1", @id = "form1", @class = "form-horizontal" }))
                {
                    <h2>Login</h2>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-body">
                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>
                            @Html.ValidationMessageFor(a => a.UserName) @Html.ValidationMessageFor(a => a.Password)
                        </div>
                        <div class="form-group col-md-9">
                            <label class="control-label col-md-2">
                                <span>@Html.DisplayNameFor(a => a.UserName)</span>
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(a => a.UserName, htmlAttributes: new { @class = "form-control", @data_required = "1" })
                                <div class="">
                                    @Html.ValidationMessageFor(a => a.UserName)
                                </div>
                            </div>

                        </div>
                        <div class="form-group col-md-9">
                            <label class="control-label col-md-2">
                                <span>@Html.DisplayNameFor(a => a.Password)</span>
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-10">
                                @Html.PasswordFor(a => a.Password, htmlAttributes: new { @class = "form-control", @data_required = "1" })
                                <div class="">
                                    @Html.ValidationMessageFor(a => a.Password)
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-offset-4 col-md-8">
                                    <button type="submit" class="btn green">Login</button>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>

